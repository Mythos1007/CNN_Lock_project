import cv2
import numpy as np
import matplotlib.pyplot as plt
from tensorflow import keras
from tensorflow.python.keras.models import load_model
import time


cap = cv2.VideoCapture(0)
if not cap.isOpened():
    print("웹캠을 열 수 없습니다.")
    exit()

count = 0
re_img = np.zeros((4, 28, 28), dtype=np.uint8)
password = np.zeros(4, dtype=np.int32)
text = ""

load_model = keras.models.load_model("my_first_DNN_model.keras")
#load_model.summary()

IMG_PATH = "lock.png"
SIZE = 512


COOLDOWN_SEC = 0.15

minus = 3
BUTTONS = [
    # left column (1~5)
    (209, 262+minus, 244, 294, 1),
    (209, 296+minus, 244, 328, 2),
    (209, 330+minus, 244, 362, 3),
    (209, 364+minus, 244, 396, 4),
    (209, 398+minus, 244, 430, 5),

    # right column (6,7,8,9,0)
    (254, 262+minus, 289, 294, 6),
    (254, 296+minus, 289, 328, 7),
    (254, 330+minus, 289, 362, 8),
    (254, 364+minus, 289, 396, 9),
    (254, 398+minus, 289, 430, 0),
]

input_seq = []
status_msg = ""
status_until = 0.0
last_click_time = 0.0

def show_status(msg, sec=1.0):
    global status_msg, status_until
    status_msg = msg
    status_until = time.time() + sec

def reset_input():
    input_seq.clear()

def render(base):
    img = base.copy()

    # 버튼 위치 디버그 표시(원하면 지워도 됨)
    for (x1, y1, x2, y2, d) in BUTTONS:
        cv2.rectangle(img, (x1, y1), (x2, y2), (40, 40, 40), 1)

    # 진행 표시(초록=입력 완료)
    for i in range(len(password)):
        color = (200, 200, 200)
        if i < len(input_seq):
            color = (0, 200, 0)
        cv2.rectangle(img, (30 + i*40, 20), (60 + i*40, 50), color, -1)
        cv2.rectangle(img, (30 + i*40, 20), (60 + i*40, 50), (60, 60, 60), 1)

    cv2.putText(img, f"Input: {input_seq}", (20, 500),
                cv2.FONT_HERSHEY_SIMPLEX, 0.8, (20, 20, 20), 2)

    if time.time() < status_until and status_msg:

        color = (0, 200, 0) if "SUCCESS" in status_msg else (0, 0, 255)
        t_state = (148, 280) if "SUCCESS" in status_msg else (180, 280)
        t_state_shadow = (149, 281) if "SUCCESS" in status_msg else (181, 281)
        cv2.putText(img, status_msg, t_state_shadow,
                    cv2.FONT_HERSHEY_SIMPLEX, 1.4, (255,255,255), 4)
        cv2.putText(img, status_msg, t_state,
                    cv2.FONT_HERSHEY_SIMPLEX, 1.4, color, 4)
    return img

def on_mouse(event, x, y, flags, param):
    global last_click_time

    if event != cv2.EVENT_LBUTTONDOWN:
        return

    now = time.time()
    if now - last_click_time < COOLDOWN_SEC:
        return
    last_click_time = now

    # 클릭이 어느 버튼인지 확인
    for (x1, y1, x2, y2, d) in BUTTONS:
        if x1 <= x <= x2 and y1 <= y <= y2:
            input_seq.append(d)

            # 중간 탈락(틀리면 즉시 실패)
            idx = len(input_seq) - 1
            if idx < len(password) and input_seq[idx] != password[idx]:
                show_status("FAILED", 1.0)
                reset_input()
                return

            # 다 입력했으면 성공/실패 판정
            if len(input_seq) >= len(password):
                if np.array_equal(input_seq, password):
                    show_status("SUCCESS", 1.2)
                    global count
                    count = 0
                else:
                    show_status("FAILED", 1.0)
                    reset_input()
            return



while True:
    ret, frame = cap.read()
    if not ret:
        print("프레임을 가져 올 수 없습니다.")
        break
    flip_frame = cv2.flip(frame, 1)
    height, width, _ = frame.shape
    center_x, center_y = width // 2, height// 2
    roi = flip_frame[center_y - 150:center_y + 150, center_x - 150:center_x + 150]
    cv2.rectangle(flip_frame, (center_x - 150, center_y - 150), (center_x + 150, center_y + 150), (0, 0, 255), 2)

    cv2.putText(flip_frame, "Password : " + text, (22, 32), cv2.FONT_HERSHEY_SIMPLEX, 1, (0,0,0), 2)
    cv2.putText(flip_frame, "Password : " + text, (20, 30), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255), 2)

    cv2.imshow("Webcam", flip_frame)

    match count:
            case 0:
                d_b_img = "digit_binary_image1.png"
            case 1:
                d_b_img = "digit_binary_image2.png"
            case 2:
                d_b_img = "digit_binary_image3.png"
            case 3:
                d_b_img = "digit_binary_image4.png"



    if count < 4:
        #화면 캡처를 위한 키 값 받기
        key = cv2.waitKey(1) & 0xFF
        if key == ord('c' or 'C'):
            gray_image = cv2.cvtColor(roi, cv2.COLOR_BGR2GRAY)
            gray_image = np.flip(gray_image, 1)
            #cv2.imshow("gray_image.png", gray_image)
            gaussian_blur = cv2.GaussianBlur(gray_image, (5, 5), 0)
        #이진화
            _, otsu_thread = cv2.threshold(gaussian_blur, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)
            #cv2.imshow("otsu_thread.png", otsu_thread)
        ######Morph
            kernel = np.ones((5, 5), np.uint8)
            erosion = cv2.erode(otsu_thread, kernel, iterations=2)
            #cv2.imshow("erosion.png", erosion)
            #cv2.imwrite(d_b_img, erosion)
        #이미지 자르기
            #img = cv2.imread(d_b_img, cv2.IMREAD_UNCHANGED)
            #h, w = img.shape[:2]
            h, w = erosion.shape[:2]
            crop_size = 290
            cx, cy = w // 2, h // 2
            half = crop_size // 2
            x1, x2 = cx - half, cx + half
            y1, y2 = cy - half, cy + half
        #경계면 설정
            x1 = max(0, x1)
            y1 = max(0, y1)
            x2 = min(w, x2)
            y2 = min(h, y2)

            #cropped_img = img[y1:y2, x1:x2]
            cropped_img = erosion[y1:y2, x1:x2]
            #cv2.imshow("cropped_img.png", cropped_img)

        #이미지 반전
            reversed_img = cv2.bitwise_not(cropped_img)
            #cv2.imshow("reversed_img.png", reversed_img)

            reversed_img = cv2.resize(reversed_img, (28, 28))
            cv2.imwrite(d_b_img, reversed_img)
            re_img[count] = reversed_img
            reversed_test_img = re_img[count]

        #이미지 인식
            predict_image = load_model.predict(reversed_test_img[np.newaxis, :, :])
            password[count] = int(predict_image.argmax())

            i = 0
            text = ""
            while i <= count:
                #text += str(password[i]) + ""
                text += "@"
                print(int(password[i]))
                i += 1

            count += 1
    elif count == 4:
        cv2.putText(flip_frame, "Password is set ! " , (184, center_y+2), cv2.FONT_HERSHEY_SIMPLEX, 1, (0,0,0), 2)
        cv2.putText(flip_frame, "Password is set ! " , (182, center_y), cv2.FONT_HERSHEY_SIMPLEX, 1, (255,255,255), 2)

        lock_img = cv2.imread(IMG_PATH)
        if lock_img is None:
            raise FileNotFoundError(f"이미지 파일을 못 찾음: {IMG_PATH}")

        reset_input()
        lock_img = cv2.resize(lock_img, (SIZE, SIZE), interpolation=cv2.INTER_AREA)

        cv2.namedWindow("Lock")
        cv2.setMouseCallback("Lock", on_mouse)

        while True:
            frame = render(lock_img)
            cv2.imshow("Lock", frame)

            if count == 0:
                break
            k = cv2.waitKey(1) & 0xFF
            if k == ord('q') or k == 27:
                count = 0
                break
            if k == ord('r'):
                reset_input()
    if cv2.waitKey(1) == 27:
        break



cap.release()
cv2.destroyAllWindows()
